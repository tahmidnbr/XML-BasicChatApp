<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="It's been a while!"
        android:textStyle="bold"
        android:layout_marginVertical="20dp"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/subtitle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subtitle"
        android:text="Get Connected with your friends!"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toTopOf="@id/mailLayout"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mailLayout"
        android:hint="Email"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/passLayout"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="10dp"
        app:endIconMode="clear_text">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mail"
            android:inputType="textEmailAddress"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/passLayout"
        android:hint="Password"
        app:layout_constraintTop_toBottomOf="@id/mailLayout"
        app:layout_constraintStart_toStartOf="@id/mailLayout"
        app:layout_constraintEnd_toEndOf="@id/mailLayout"
        app:layout_constraintBottom_toTopOf="@id/signiN"
        android:layout_marginVertical="10dp"
        app:endIconMode="password_toggle">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pass"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/signiN"
        android:text="Sign In"
        android:layout_marginVertical="40dp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toTopOf="@id/already"
        app:layout_constraintTop_toBottomOf="@id/passLayout"
        app:layout_constraintStart_toStartOf="@id/passLayout"
        app:layout_constraintEnd_toEndOf="@id/passLayout"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/already"
        android:text="Don't have any account?"
        app:layout_constraintTop_toBottomOf="@id/signiN"
        app:layout_constraintStart_toStartOf="@id/signiN"
        app:layout_constraintEnd_toEndOf="@id/signiN"/>

</androidx.constraintlayout.widget.ConstraintLayout>